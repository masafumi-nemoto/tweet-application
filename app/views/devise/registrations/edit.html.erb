<div class="card devise-card">
  <div class="card-body">
    <div class="devise-wrapper">
      <p class="devise-text">ユーザー情報の編集</p>
      <%= form_with scope: resource, as: resource_name, url: user_registration_path(resource_name), method: :patch, local: true do |f| %>
      <%# <%= form_with url: "/users", method: :patch, local: true, model: @user do |f| %>
        <%# <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "ユーザーネーム", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control col-md-6" %>
        </div>

        <div class="actions">
          <%= f.submit "保存", class: "btn btn-primary devise-btn" %>
          <%# <%= link_to '退会', @user, class: 'btn btn-danger', method: :delete, data: { confirm: '本当に退会しますか？' } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
